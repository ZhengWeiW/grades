<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 配置中心设置的日志路径不生效 -->
    <!--
    <springProperty scope="context" name="LOG_FILE" source="logback.loghome"/>
     -->
    <property name="APP_NAME" value="obm"/>
    <property name="LOG_FILE" value="/flexiApps/logs/${APP_NAME}"/>
    <property name="PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread%X{sourceThread}]%logger{24} - %msg%n"/>

    <!-- <springProfile name="dev"> -->
        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d{MM/dd/yyyy HH:mm:ss} %-5level [%thread%X{sourceThread}]%logger{24} - %msg%n</pattern>
            </encoder>
        </appender>
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE}/${APP_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- daily rollover -->
                <fileNamePattern>${LOG_FILE}/${APP_NAME}.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
                <!-- 保留732天的历史日志 -->
                <maxHistory>732</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
        <appender name="SQL-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE}/sql.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- daily rollover -->
                <fileNamePattern>${LOG_FILE}/sql.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
                <!-- 保留30天的历史日志 -->
                <maxHistory>732</maxHistory>
            </rollingPolicy>
            <encoder>
                <pattern>${PATTERN}</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>
        <logger name="org.springframework.jdbc.core.JdbcTemplate" level="info">
            <appender-ref ref="SQL-FILE"/>
        </logger>
        <logger name="org.springframework.web.servlet.mvc" level="DEBUG"/>
        <logger name="org.apache.zookeeper" level="warn"/> <!--  去掉日志-->
        <logger name="org.springframework.session.web.http.SessionRepositoryFilter" level="WARN"/> <!--  去掉日志-->
        <logger name="org.apache.tiles" level="WARN"/>
        
		<logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="info"/> 
        <root level="INFO">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="FILE"/>
        </root>
    <!-- </springProfile> -->


</configuration>
